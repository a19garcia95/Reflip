<%= render "layouts/navbar" %>

<div class="col-sm-10 col-sm-offset-2 no-padding main-container">
  <div class="property-display">
    <div class="property-info">
      <div class="info">
        <div class="property-address">
          <h1><%=@property.street%></h1>
          <h1><%=@property.city%>,
              <%=@property.state%>
              <%=@property.zipcode%></h1>
        </div>

        <div class="property-details">
          <div class="field-description estimate">
            <div id="zestimate"><%=number_to_currency(@property.estimate, precision: 0)%></div>
            <div class="description">Estimate</div>
          </div>

          <div class="field-description beds">
            <div><%= @property.bedrooms%></div>
            <div class="description">Beds</div>
          </div>

          <div class="field-description baths">
            <div><%= @property.baths%></div>
            <div class="description">Baths</div>
          </div>

          <div class="field-description sqft">
            <div><%=number_with_delimiter@property.sqft%></div>
            <div class="description">Sq Ft</div>
          </div>
        </div>
      </div>
      <div class="results">
       <div class="profit filter">
         <h1>PROFIT</h1>
       </div>
       <div class="profit-result filter">
         <span id="profitEstimated">$0.00</span>
       </div>
       <div class="roi filter">
         <h1>ROI</h1>
       </div>
       <div class="roi-result filter">
         <span id="roiEstimated">0.00%</span>
       </div>
     </div>

    </div>
  </div>

  <div class="clearfix"></div>


  <div class="numbers">
    <div class="numbers-all">
      <div class="numbers-all-costs" id="financial-total-cost">
        <span id="financialTotalCost">$0.00</span>
        <div style="font-size:13px;">Monthly Loan Cost </div>
      </div>
      <div class="numbers-all-costs" id="holding-total-cost">
        <span id="holdingTotalCost">$0.00</span>
        <div for="" style="font-size:13px;">Total Holding Costs </div>
      </div>
      <div class="numbers-all-costs" id="transaction-total-cost">
        <span id="transactionTotalCost">$0.00</span>
        <div for="" style="font-size:13px;">Total Transaction Costs </div>
      </div>
      <div class="numbers-all-costs" id="repairs-total-cost">
        <span id="repairTotalCost">$0.00</span>
        <div for="" style="font-size:13px;">Total Repair Costs </div>
      </div>
      <div class="numbers-all-costs" id="total-total-cost">
        <span id="allCostsTotal">$0.00</span>
        <div for="" style="font-size:13px;">Total Costs </div>
      </div>
    </div>
  </div>


  <div class="all-costs-form" id="analyzeModal">
    <form action="/analyze" class="form-horizontal">
      <!-- <div class="form-financial">
        <label for="">Zestimate</label>
        <div>
          $
          <input class="allInputs" type="text" name="zestimate" value="" id="estimate" style="color:black;">
        </div>
