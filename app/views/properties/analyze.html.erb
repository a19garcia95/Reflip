      <div class="offer-hold">

        <div class="how-much-offer col-sm-8">
          <div class="offerHowMuch col-sm-4">
            <label for="">How Much Do You Want to Offer?</label>
            <div id="percentOffering">
              %
              <input class="mytext allInputs" type="text" name="percent-offer" value="" id="percentOffer" style="color:black;">
            </div>
          </div>

          <div class="offerInputs">
            <span id="dollarSign">$</span>
            <input class="offerInput allInputs" type="text" name="offer-price" value="" id="offerPrice" placeholder="0.00">
          </div>
        </div>
